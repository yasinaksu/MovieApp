@model OzlemBilgisayar.MvcWebUI.Areas.AdminPanel.Models.LayoutModels.LayoutLeftSideBarVm
<div id="sidebar">
    <!-- Wrapper for scrolling functionality -->
    <div id="sidebar-scroll">
        <!-- Sidebar Content -->
        <div class="sidebar-content">
            <!-- Brand -->
            <a href="@Url.Action("DashBoard","Home",new { area="AdminPanel"})" class="sidebar-brand">
                <i class="fa fa-film"></i><span class="sidebar-nav-mini-hide"><strong>Özlem</strong> Bilgisayar</span>
            </a>
            <!-- END Brand -->
            <!-- User Info -->
            <div class="sidebar-section sidebar-user clearfix sidebar-nav-mini-hide">
                <div class="sidebar-user-avatar">
                    <a href="@Url.Action("DashBoard","Home",new { area="AdminPanel"})">
                        @if (string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="~//ThemeFiles/Admin/img/placeholders/avatars/avatar.jpg" alt="avatar">
                        }
                        else
                        {
                            <img src="@Url.Content($"~/Uploads/Img/{Model.Image}")" alt="avatar">
                        }
                    </a>
                </div>
                <div class="sidebar-user-name">@Model.FirstName @Model.LastName</div>
                <div class="sidebar-user-links">
                    <a href="@Url.Action("UserProfile","Account",new { area="AdminPanel",id=Model.Id})" data-toggle="tooltip" data-placement="bottom" title="Profilim"><i class="gi gi-user"></i></a>
                    <a href="javascript:void(0)" data-toggle="tooltip" data-placement="bottom" title="Messages"><i class="gi gi-envelope"></i></a>
                    <a href="@Url.Action("ChangePassword","Account",new { Area="AdminPanel"})" data-toggle="tooltip" data-placement="bottom" title="Parola değiştir"><i class="gi gi-cogwheel"></i></a>
                    <a href="@Url.Action("Logout","Account",new { area="AdminPanel"})" data-toggle="tooltip" data-placement="bottom" title="Çıkış"><i class="gi gi-exit"></i></a>
                </div>
            </div>
            <!-- END User Info -->
            <!-- Theme Colors -->
            <!-- Change Color Theme functionality can be found in js/app.js - templateOptions() -->
            <ul class="sidebar-section sidebar-themes clearfix sidebar-nav-mini-hide">
                <!-- You can also add the default color theme
                <li class="active">
                    <a href="javascript:void(0)" class="themed-background-dark-default themed-border-default" data-theme="default" data-toggle="tooltip" title="Default Blue"></a>
                </li>
                -->
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-night themed-border-night" data-theme="/ThemeFiles/Admin/css/themes/night.css" data-toggle="tooltip" title="Night"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-amethyst themed-border-amethyst" data-theme="/ThemeFiles/Admin/css/themes/amethyst.css" data-toggle="tooltip" title="Amethyst"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-modern themed-border-modern" data-theme="/ThemeFiles/Admin/css/themes/modern.css" data-toggle="tooltip" title="Modern"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-autumn themed-border-autumn" data-theme="/ThemeFiles/Admin/css/themes/autumn.css" data-toggle="tooltip" title="Autumn"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-flatie themed-border-flatie" data-theme="/ThemeFiles/Admin/css/themes/flatie.css" data-toggle="tooltip" title="Flatie"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-spring themed-border-spring" data-theme="/ThemeFiles/Admin/css/themes/spring.css" data-toggle="tooltip" title="Spring"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-fancy themed-border-fancy" data-theme="/ThemeFiles/Admin/css/themes/fancy.css" data-toggle="tooltip" title="Fancy"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-fire themed-border-fire" data-theme="/ThemeFiles/Admin/css/themes/fire.css" data-toggle="tooltip" title="Fire"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-coral themed-border-coral" data-theme="/ThemeFiles/Admin/css/themes/coral.css" data-toggle="tooltip" title="Coral"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-lake themed-border-lake" data-theme="/ThemeFiles/Admin/css/themes/lake.css" data-toggle="tooltip" title="Lake"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-forest themed-border-forest" data-theme="/ThemeFiles/Admin/css/themes/forest.css" data-toggle="tooltip" title="Forest"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-waterlily themed-border-waterlily" data-theme="/ThemeFiles/Admin/css/themes/waterlily.css" data-toggle="tooltip" title="Waterlily"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-emerald themed-border-emerald" data-theme="/ThemeFiles/Admin/css/themes/emerald.css" data-toggle="tooltip" title="Emerald"></a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="themed-background-dark-blackberry themed-border-blackberry" data-theme="/ThemeFiles/Admin/css/themes/blackberry.css" data-toggle="tooltip" title="Blackberry"></a>
                </li>
            </ul>
            <!-- END Theme Colors -->
            <!-- Sidebar Navigation -->
            <ul class="sidebar-nav">
                <li>
                    <a href="@Url.Action("DashBoard","Home",new { area="AdminPanel"})" class=" active"><i class="gi gi-stopwatch sidebar-nav-icon"></i><span class="sidebar-nav-mini-hide">Yönetim Paneli</span></a>
                </li>
                <li>
                    <a href="#" class="sidebar-nav-menu"><i class="fa fa-angle-left sidebar-nav-indicator sidebar-nav-mini-hide"></i><i class="gi gi-cogwheel sidebar-nav-icon"></i><span class="sidebar-nav-mini-hide">Dropdown</span></a>
                    <ul>
                        <li>
                            <a href="javascript:void(0)">Link #1</a>
                        </li>
                        <li>
                            <a href="javascript:void(0)">Link #2</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- END Sidebar Navigation -->
        </div>
        <!-- END Sidebar Content -->
    </div>
    <!-- END Wrapper for scrolling functionality -->
</div>
