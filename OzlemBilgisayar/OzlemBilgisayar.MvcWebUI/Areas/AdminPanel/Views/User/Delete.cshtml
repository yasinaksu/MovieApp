@model OzlemBilgisayar.MvcWebUI.Areas.AdminPanel.Models.UserModels.UserDeleteVm
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="widget">
            <div class="widget-simple">
                <a href="@Url.Action("Index","User",new { area="AdminPanel"})" class="widget-icon pull-left animation-fadeIn themed-background">
                    <i class="fa fa-arrow-left"></i>
                </a>
                <a href="javascript:void(0)" class="widget-icon pull-right animation-fadeIn themed-background">
                    <i class="fa fa-user"></i>
                </a>
                <h4 class="widget-content text-center animation-hatch">
                    <strong>Kullanıcı Silme</strong>
                    <small>Sayfası</small>
                </h4>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="block">
            <!-- Info Title -->
            <div class="block-title">
                <h2><strong>@Model.FirstName @Model.LastName</strong> kullanıcısını silmek istiyor musunuz?</h2>
            </div>
            <!-- END Info Title -->
            <!-- Info Content -->
            <div class="row">
                <div class="block-section col-md-3 text-center">
                    <a href="@Url.Content("~/Uploads/Img/"+Model.Image)" data-toggle="lightbox-image">
                        <img src="@Url.Content("~/Uploads/Img/"+Model.Image)" alt="@Model.FirstName" />
                    </a>
                    <h4 class="sub-header text-capitalize">@Model.FirstName @Model.LastName</h4>
                </div>
                <div class="col-md-9">
                    <table class="table table-borderless table-striped">
                        <tbody>
                            <tr>
                                <td style="width: 20%;"><strong>Adı Soyadı</strong></td>
                                <td>
                                    @Model.FirstName @Model.LastName
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Eklenme Tarihi</strong></td>
                                <td>
                                    @Model.Created.ToShortDateString()
                                </td>
                            </tr>                         
                            <tr>
                                <td><strong>Yetkileri</strong></td>
                                <td>
                                    @foreach (var role in Model.Roles)
                                    {
                                        <span class="label label-primary">@role</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Durum</strong></td>
                                <td>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge label-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge label-danger">Pasif</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>

                                    @using (Html.BeginForm("Delete", "User", new { area = "AdminPanel" }, FormMethod.Post))
                                    {
                                        @Html.HiddenFor(x => x.Id)
                                        <a href="@Url.Action("Index","User",new { Area="AdminPanel"})" class="btn btn-success">
                                            <i class="fa fa-arrow-circle-left"></i>
                                            Geri
                                        </a>
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa fa-recycle fa-fw"></i>
                                            Sil
                                        </button>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- END Info Content -->
        </div>
    </div>
</div>




@section styles{

}
@section scripts{
    <script>
        $(function () {
            /*Activate Page Header*/
            $('.content-header #user-index').toggleClass('active');
            /* Initialize Bootstrap Datatables Integration */
        });
    </script>
}

